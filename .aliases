# Docker
alias d='docker'
alias dps='docker ps'
alias dpsa='docker ps -a'
alias di='docker images'
alias drm='docker rm -f'

# Firebase
alias fb='firebase'
alias fbl='firebase list'
alias fbd='firebase deploy'
alias fbdh='firebase deploy --only hosting'
alias fbdf='firebase deploy --only functions'

# Generic
alias zshrestart='source ~/.zshrc'
alias aliasls="echo '\e[36mGlobal\e[0m' && cat ~/.aliases | grep 'alias' && echo '\e[36mGit\e[0m' &&  git config --get-regexp alias | sed 's/\./ /' | grep alias"